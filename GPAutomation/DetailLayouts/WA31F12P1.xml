<?xml version="1.0" encoding="utf-8"?>
<LayoutDefinition>
	<Table CSSClass="FormViewLayoutTable">
		<Columns>
      <Column size="5%"/>

      <Column size="10%"/>
      <Column size="13%"/>
      <Column size="5%"/>

      <Column size="10%"/>
      <Column size="13%"/>
      <Column size="5%"/>

      <Column size="10%"/>
      <Column size="13%"/>
      <Column size="15%"/>

      <Column size="5%"/>
    </Columns>
		<Row>
			<Item type="Spacer" columnSpan="1"/>
			<Item type="Label" dbColumnName="ProcessNumber" columnSpan="1" alignment="right"/>
			<Item type="Value" dbColumnName="ProcessNumber" columnSpan="1"/>
			<Item type="Spacer" columnSpan="1"/>
			<Item type="Label" dbColumnName="Status" columnSpan="1" alignment="right"/>
			<Item type="Value" dbColumnName="Status" columnSpan="1"/>
			<Item type="Spacer" columnSpan="1"/>
			<Item type="Label" dbColumnName="ScheduledDate" columnSpan="1" alignment="right"/>
			<Item type="DateValue" dbColumnName="ScheduledDate" columnSpan="1" alignment="right"/>
			<Item type="Spacer" columnSpan="2"/>
		</Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="ProductCode2" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="ProductCode2" columnSpan="4"/>
      <Item type="Spacer" columnSpan="5"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="OrderQuantity" columnSpan="1" alignment="right"/>
      <Item type="Numeric" dbColumnName="OrderQuantity" columnSpan="1" alignment="right"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="OrderUOM2" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="OrderUOM2" columnSpan="1"/>
      <Item type="Spacer" columnSpan="5"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="OffloadQuantity" columnSpan="1" alignment="right"/>
      <Item type="Numeric" dbColumnName="OffloadQuantity" columnSpan="1" alignment="right"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="OffloadUOM" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="OffloadUOM" columnSpan="1"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="Destination" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="Destination" columnSpan="1" alignment="left"/>
      <Item type="Spacer" columnSpan="2"/>
    </Row>
    <Row>
			<Item type="Spacer" columnSpan="1"/>
			<Item type="Label" dbColumnName="Comments" columnSpan="1"/>
			<Item type="Spacer" columnSpan="4"/>
		</Row>
		<Row>
			<Item type="Spacer" columnSpan="1"/>
			<Item type="Value" dbColumnName="Comments" columnSpan="9" multiLine="true" pixelHeight="300"/>
			<Item type="Spacer" columnSpan="1"/>
		</Row>
		<Row>
			<!-- Invisible fields.  All drop down fields MUST exist on the form but can be hidden
                if they are not desired for a particular site.  This also adds a nice blank line to
                the bottom of the form to keep it from cutting off abruptly.  -->
			<Item type="Value" dbColumnName="OrderType" columnSpan="1" visible="false"/>
      <Item type="Value" dbColumnName="MethodOfDelivery" columnSpan="1" visible="false"/>
      <Item type="Value" dbColumnName="PlantResource" columnSpan="1" visible="false"/>
      <Item type="Value" dbColumnName="ProductCode" columnSpan="1" visible="false"/>
      <Item type="Value" dbColumnName="OrderUOM" columnSpan="1" visible="false"/>
    </Row>
	</Table>
</LayoutDefinition>

