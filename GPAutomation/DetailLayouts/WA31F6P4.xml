<?xml version="1.0" encoding="utf-8"?>
<LayoutDefinition>
  <Table CSSClass="FormViewLayoutTable">
    <Columns>
      <Column size="5%"/>

      <Column size="10%"/>
      <Column size="13%"/>
      <Column size="5%"/>

      <Column size="10%"/>
      <Column size="13%"/>
      <Column size="5%"/>

      <Column size="10%"/>
      <Column size="13%"/>
      <Column size="15%"/>

      <Column size="5%"/>
    </Columns>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="ProcessNumber" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="NewProcessNumber" columnSpan="1"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="Status" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="Status" columnSpan="1"/>
      <Item type="Spacer" columnSpan="5"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="ScheduledDate" columnSpan="1" alignment="right"/>
      <Item type="DateValue" dbColumnName="ScheduledDate" columnSpan="1"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="MethodOfDelivery" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="MethodOfDelivery" columnSpan="1"/>
      <Item type="Spacer" columnSpan="5"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="11"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="PONumber" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="PONumber" columnSpan="1" alignment="right"/>
      <Item type="Spacer" columnSpan="8"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="11"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="CustomerID" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="CustomerID" columnSpan="1"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="CustomerName" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="CustomerName" columnSpan="1"/>
      <Item type="Spacer" columnSpan="5"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="CarrierID" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="CarrierID" columnSpan="1"/>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="CarrierName" columnSpan="1" alignment="right"/>
      <Item type="Value" dbColumnName="CarrierName" columnSpan="1"/>
      <Item type="Spacer" columnSpan="5"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="11"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="CarrierInstruction" columnSpan="1"/>
      <Item type="Spacer" columnSpan="9"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Value" dbColumnName="CarrierInstruction" columnSpan="9" multiLine="true" pixelHeight="100"/>
      <Item type="Spacer" columnSpan="1"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="11"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="SiteInstruction" columnSpan="1"/>
      <Item type="Spacer" columnSpan="9"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Value" dbColumnName="SiteInstruction" columnSpan="9" multiLine="true" pixelHeight="100"/>
      <Item type="Spacer" columnSpan="1"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="11"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Label" dbColumnName="Comments" columnSpan="1"/>
      <Item type="Spacer" columnSpan="9"/>
    </Row>
    <Row>
      <Item type="Spacer" columnSpan="1"/>
      <Item type="Value" dbColumnName="Comments" columnSpan="9" multiLine="true" pixelHeight="300"/>
      <Item type="Spacer" columnSpan="1"/>
    </Row>
    <Row>
      <!-- Invisible fields.  All drop down fields MUST exist on the form but can be hidden
                if they are not desired for a particular site.  This also adds a nice blank line to
                the bottom of the form to keep it from cutting off abruptly.  -->
      <Item type="Value" dbColumnName="OrderType" columnSpan="1" visible="false"/>
    </Row>
  </Table>
</LayoutDefinition>